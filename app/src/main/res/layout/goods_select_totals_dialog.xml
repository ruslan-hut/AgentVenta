<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_gravity="center_vertical"
                android:text="@string/doc_total_price"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/total_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="@string/holder_number_decimal"
                android:layout_gravity="end"
                android:textAlignment="textEnd" />
        </LinearLayout>

        <LinearLayout style="@style/TearLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/attr_discount"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/total_discount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_weight="1"
                android:text="@string/holder_number_decimal"
                android:layout_gravity="end"
                android:textAlignment="textEnd" />
        </LinearLayout>

        <LinearLayout style="@style/TearLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="@string/doc_total_quantity"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/total_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_weight="1"
                android:text="@string/holder_number"
                android:layout_gravity="end"
                android:textAlignment="textEnd" />
        </LinearLayout>

        <LinearLayout style="@style/TearLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="@string/weight"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/total_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_weight="1"
                android:text="@string/holder_number"
                android:layout_gravity="end"
                android:textAlignment="textEnd" />
        </LinearLayout>

    </LinearLayout>

</layout>