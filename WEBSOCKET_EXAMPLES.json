  "example_4_full_catalog": {
    "type": "data",
    "message_id": "msg-004",
    "timestamp": "2025-11-30T20:03:00Z",
    "status": "approved",
    "payload": [
      {
        "value_id": "clients",
        "guid": "client-001",
        "description": "Клієнт",
        "code1": "C001",
        "is_active": 1,
        "is_group": 0
      },
      {
        "value_id": "goods",
        "guid": "prod-001",
        "description": "Товар",
        "code1": "P001",
        "price": 100.00,
        "is_active": 1,
        "is_group": 0
      },
      {
        "value_id": "payment_types",
        "payment_type": "cash",
        "is_fiscal": 1,
        "is_default": 1,
        "description": "Готівка"
      },
      {
        "value_id": "companies",
        "guid": "comp-001",
        "description": "ТОВ \"АгентВента\"",
        "is_default": 1
      },
      {
        "value_id": "stores",
        "guid": "store-001",
        "description": "Склад №1",
        "is_default": 1
      },
      {
        "value_id": "rests",
        "company_guid": "comp-001",
        "store_guid": "store-001",
        "product_guid": "prod-001",
        "quantity": 150.0
      }
    ]
  },

  "android_ack_response": {
    "type": "ack",
    "message_id": "msg-001",
    "timestamp": "2025-11-30T20:00:01Z",
    "payload": {
      "status": "received"
    }
  },

  "android_error_response": {
    "type": "error",
    "message_id": "msg-001",
    "timestamp": "2025-11-30T20:00:01Z",
    "payload": {
      "data_type": "options",
      "error": "Failed to save: Database is locked"
    }
  }
}
